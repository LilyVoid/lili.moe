---
let current = Astro.url.pathname.replace(/\/$/, '') || '/';
import "../styles/pub.css";
---

<!doctype html>
<html lang="en">
	<head>
	<style>html{background:#000}</style>
    <meta name="theme-color" content="#000000">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="description" content="Lili.moe is Lily's personal site.">

    <link rel="preload" href="/Illustration12.webp" as="image">
    <link rel="preload" href="/InterVariable.woff2" as="font" type="font/woff2" crossorigin />

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="manifest" href="/favicon/site.webmanifest">

		<meta name="generator" content={Astro.generator} />
		<title>Lily</title>
	</head>
	<body>
<nav>
  <button id="menu-toggle" aria-label="toggle menu">â˜°</button>
  <ul id="nav-links" class="nav">
    <li><a href="/"         aria-current={current === '/'          ? 'page' : undefined}>home</a></li>
    <li><a href="/about"    aria-current={current === '/about'     ? 'page' : undefined}>about</a></li>
    <li><a href="/donate"   aria-current={current === '/donate'    ? 'page' : undefined}>donate</a></li>
    <li><a href="/contact"  aria-current={current === '/contact'   ? 'page' : undefined}>contact</a></li>
    <li><a href="/services" aria-current={current === '/services'  ? 'page' : undefined}>services</a></li>
    <li><a href="/wiki"     aria-current={current === '/wiki'      ? 'page' : undefined}>wiki</a></li>
  </ul>
</nav>

<script is:inline>
  const toggle = document.getElementById('menu-toggle');
  const nav    = document.getElementById('nav-links');

  if (toggle && nav) {
    toggle.addEventListener('click', () => {
      nav.classList.toggle('active');
    });

    const mq = window.matchMedia('(min-width: 769px)');
    mq.addEventListener('change', () => {
      if (mq.matches) nav.classList.remove('active');
    });
  }
</script>

		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
